@require '../style/variables'
body
  padding: 0
  & > main
    width: 100%
    // max-width: inherit

article
  align-items: center
  display: flex
  flex-direction: column
  margin-top: inherit
  max-width: inherit
  & > p
    margin:base-line
    text-align: left;
    @media screen and (min-width: $min-vw)
      between: min-width, round(base-line * 25, 3), round(base-line * 25, 3)
  & > header
    width: 100vw
    margin-bottom: base-line
    text-align: center
    background: linear-gradient(
      rgba(0, 0, 0, 0.75),
      rgba(0, 0, 0, 0.33)
    ), url(cover.jpg)
    background-size:cover
    // background-repeat: no-repeat
    height: 100vh
    & > h1
    & > h2
      margin: 0
      color:white
      text-shadow: -1px 0.25px 0.5px black
    & > h1
      margin-top: (base-line * 7)
      margin-bottom: base-line
    & > h2
      text-align: center
      width:(base-line * 7)
